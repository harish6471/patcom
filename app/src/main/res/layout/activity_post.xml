<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.droidclan.samplefoodblog.PostActivity">

  <include
      android:id="@+id/toolbar"
      layout="@layout/fifth_toolbar"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/organization_name"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"

      android:background="@drawable/edittext_shape_two"
      android:ems="10"
      android:hint="Name of the  Orgainzation"
      android:inputType="textPersonName"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textColor="@color/post_heading"
      android:textColorHint="@color/post_details"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/name"
      tools:layout_editor_absoluteY="348dp" />

  <EditText
      android:id="@+id/link"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/edittext_shape_two"
      android:ems="10"
      android:hint="Website Url"
      android:inputType="textPersonName"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textColor="@color/post_heading"
      android:textColorHint="@color/post_details"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/organization_name"
      tools:layout_editor_absoluteY="416dp" />

  <EditText
      android:id="@+id/name"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/edittext_shape_two"
      android:ems="10"
      android:hint="Head of the Organization"
      android:inputType="textPersonName"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textColor="@color/post_heading"
      android:textColorHint="@color/post_details"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/phonenumber"
      tools:layout_editor_absoluteY="284dp" />

  <EditText
      android:id="@+id/phonenumber"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/edittext_shape_two"
      android:ems="10"
      android:hint="phone number"
      android:inputType="phone"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textColor="@color/post_heading"
      android:textColorHint="@color/post_details"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      tools:layout_editor_absoluteY="216dp"
      />

  <EditText
      android:id="@+id/city"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/edittext_shape_two"
      android:ems="10"
      android:hint="City"
      android:inputType="text"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textColor="@color/post_heading"
      android:textColorHint="@color/post_details"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/link"
      tools:layout_editor_absoluteY="536dp" />

  <EditText
      android:id="@+id/state"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/edittext_shape_two"
      android:ems="10"
      android:hint="State"
      android:inputType="text"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textColor="@color/post_heading"
      android:textColorHint="@color/post_details"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/city"
      tools:layout_editor_absoluteY="476dp" />

  <EditText
      android:id="@+id/required"
      android:layout_width="0dp"
      android:layout_height="50dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/edittext_shape_two"
      android:ems="10"
      android:hint="Amount Required"
      android:inputType="phone"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textColor="@color/post_heading"
      android:textColorHint="@color/post_details"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/state"
      tools:layout_editor_absoluteY="476dp" />


  <Button
      android:id="@+id/submit_post_btn"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:text="Submit"
      android:background="@drawable/donatebutton"
      android:backgroundTint="@color/black"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:textSize="18sp"
      android:elevation="8dp"
      android:clickable="true"
      android:focusable="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:id="@+id/organizationphoto"
      android:layout_gravity="center"
      android:scaleType="centerInside"
      app:srcCompat="@color/com_facebook_device_auth_text"
      tools:layout_editor_absoluteX="79dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      app:layout_constraintTop_toBottomOf="@+id/required"
      tools:layout_editor_absoluteY="405dp" />


</androidx.constraintlayout.widget.ConstraintLayout>